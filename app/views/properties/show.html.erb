<p id="notice"><%= notice %></p>
<h1>Property Detail</h1>
<p>
  <strong>Property:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>Rent:</strong>
  <%= @property.rent %>
</p>
<p>
  <strong>Address:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>Building age:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>Remarks:</strong>
  <%= @property.remark %>
</p>
<hr />
<% i = 0 %>
<% @stations.each do |st| %>
  <h1>Nearest station<%= i=i+1 %> </h1>
  <p>
  <strong>Name of railway:</strong>
    <%= st.railway %>
  </p>
  <p>
  <strong>Station name:</strong>
    <%= st.name %>
  </p>
  <p>
  <strong>How many minutes walk:</strong>
    <%= st.walk %>
  </p>
<% end %>

<%= link_to 'Edit', edit_property_path(@property) %> |
<%= link_to 'Back', properties_path %>
